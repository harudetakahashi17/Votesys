@page
@model IndexModel
@{
    ViewData["Title"] = "VoteSys";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #17a2b8;
        height: 100vh;
    }

    #login .container #login-row #login-column #login-box {
        margin-top: 20px;
        max-width: 600px;
        height: inherit;
        border: 1px solid #9C9C9C;
        border-radius: 5px;
        background-color: #EAEAEA;
    }

        #login .container #login-row #login-column #login-box #login-form {
            padding: 20px;
        }

            #login .container #login-row #login-column #login-box #login-form #register-link {
                margin-top: -85px;
            }
</style>

<div id="login">
    <h3 class="text-center text-white pt-3">Welcome to Votesys</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h3 class="text-center text-info">Registration Form</h3>
                        <div class="form-group">
                            <label asp-for="UserModel.FirstName" class="text-info">First Name:</label><br>
                            <input asp-for="UserModel.FirstName" id="tbFName" class="form-control" required>
                            <span asp-validation-for="UserModel.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.LastName" class="text-info">Last Name:</label><br>
                            <input asp-for="UserModel.LastName" id="tbLName" class="form-control">
                            <span asp-validation-for="UserModel.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.Email" class="text-info">Email:</label><br>
                            <input asp-for="UserModel.Email" id="tbEmail" class="form-control" required pattern="^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$">
                            <span asp-validation-for="UserModel.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.Password" class="text-info">Password:</label><br>
                            <input asp-for="UserModel.Password" type="password" id="tbPassword" class="form-control" required pattern="(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9]).{8,}">
                            <span asp-validation-for="UserModel.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.Gender" class="text-info">Gender:</label><br>
                            <select asp-for="UserModel.Gender" id="slGender" class="form-control">
                                <option value="M" selected>Male</option>
                                <option value="F">Female</option>
                            </select>
                            <span asp-validation-for="UserModel.Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.Age" class="text-info">Age:</label><br>
                            <input type="number" asp-for="UserModel.Age" id="tbAge" class="form-control" required min="1">
                            <span asp-validation-for="UserModel.Age" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" id="btnSubmit" name="submit" class="btn btn-info btn-md form-control" value="Register">
                            @*<button type="button" id="btnSubmit" name="submit" class="btn btn-info btn-md form-control">Login</button>*@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
