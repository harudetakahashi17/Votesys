@page
@model Votesys.Pages.Admin.Users.CreateModel

@{
    ViewData["Title"] = "Create User";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserModel.FirstName" class="control-label"></label>
                <input asp-for="UserModel.FirstName" class="form-control" />
                <span asp-validation-for="UserModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.LastName" class="control-label"></label>
                <input asp-for="UserModel.LastName" class="form-control" />
                <span asp-validation-for="UserModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Email" class="control-label"></label>
                <input asp-for="UserModel.Email" class="form-control" required pattern="^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$"/>
                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Password" class="control-label"></label>
                <input asp-for="UserModel.Password" class="form-control" type="password" required pattern="(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9]).{8,}"/>
                <span asp-validation-for="UserModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Gender" class="control-label"></label>
                <select asp-for="UserModel.Gender" class="form-control">
                    <option value="M" selected>Male</option>
                    <option value="F">Female</option>
                </select>
                <span asp-validation-for="UserModel.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Age" class="control-label"></label>
                <input asp-for="UserModel.Age" type="number" class="form-control" min="0"/>
                <span asp-validation-for="UserModel.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.CreatedOn" class="control-label"></label>
                <input asp-for="UserModel.CreatedOn" class="form-control" value="@(DateTime.Now.ToString("yyyy-MM-dd") + "T" + DateTime.Now.ToString("HH:mm"))" readonly />
                <span asp-validation-for="UserModel.CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-page="Index">Back to List</a>
                <input type="submit" value="Create" class="btn btn-primary float-right" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
