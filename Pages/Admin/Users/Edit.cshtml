@page
@model Votesys.Pages.Admin.Users.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    var sesi = ViewData["Session"];
}

<h1>Edit</h1>

<h4>UserModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserModel.UserID" />
            <div class="form-group">
                <label asp-for="UserModel.FirstName" class="control-label"></label>
                <input asp-for="UserModel.FirstName" class="form-control" />
                <span asp-validation-for="UserModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.LastName" class="control-label"></label>
                <input asp-for="UserModel.LastName" class="form-control" />
                <span asp-validation-for="UserModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Email" class="control-label"></label>
                <input asp-for="UserModel.Email" class="form-control" />
                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Password" class="control-label"></label>
                <input asp-for="UserModel.Password" class="form-control" />
                <span asp-validation-for="UserModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Gender" class="control-label"></label>
                <select asp-for="UserModel.Gender" class="form-control">
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
                <span asp-validation-for="UserModel.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.Age" class="control-label"></label>
                <input asp-for="UserModel.Age" class="form-control" />
                <span asp-validation-for="UserModel.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-page="./Index">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary float-right" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        var disp = $('#dispName');
        disp.text('@sesi');
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
