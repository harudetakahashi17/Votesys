@page
@model Votesys.Pages.Admin.Categories.EditModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    var sesi = ViewData["Session"];
}

<h1>Edit Category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryModel.CategoryID" />
            <div class="form-group">
                <label asp-for="CategoryModel.CategoryName" class="control-label"></label>
                <input asp-for="CategoryModel.CategoryName" class="form-control" />
                <span asp-validation-for="CategoryModel.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-page="./Index">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary float-right" />
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        var disp = $('#dispName');
        disp.text('@sesi');
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
